---
const menuItems = [
  {
    name: "Home",
    link: "/",
  },
  {
    name: "Dev",
    link: "/dev",
  },
  {
    name: "Photos",
    link: "/photos",
  },
];
---

<div class="flex flex-row justify-evenly">
  {
    menuItems.map((menuItem) => {
      return (
        <a
          href={menuItem.link}
          class="text-gray-900 dark:text-gray-100 hover:text-gray-700 dark:hover:text-gray-300 px-3 py-2 rounded-md text-sm font-medium"
        >
          {menuItem.name}
        </a>
      );
    })
  }
</div>
